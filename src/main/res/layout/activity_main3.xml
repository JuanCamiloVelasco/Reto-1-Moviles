<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#DFC8E4"
    tools:context=".MainActivity3">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#731DEF"
                android:text="Servicios"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_background"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/imagenperro1"
                    android:layout_width="326dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/domicilio" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProName"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="#731DEF"
                        android:text="Servicio a domicilio"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background" />

                    <TextView
                        android:id="@+id/tvProDesciption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contamos con el servicio a domicilio mas rapido y con la mayor cobertura del mercado"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btnperro1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="317dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/servicioalcliente" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="#731DEF"
                        android:text="Servicio al cliente"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contamos con profesionales que te atenderan y aclararan cualquier tipo de duda que tengas, llama ahora!"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btnperro2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgSucursales"
                    android:layout_width="318dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/veterinaria" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSucName"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="#731DEF"
                        android:text="Veterinaria"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvSucLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="En Bonnys contamos con los mas y mejores veterinarios experimentados que trataran a tu mascota como se lo merece :)"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btngato1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imggatos2"
                    android:layout_width="323dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/drogueriaveterinaria" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtg2"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#731DEF"
                        android:text="Drogueria veterinaria"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtg3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nosotros nos aseguramos de brindarte un servicio completo!, para que puedas comprar a un bajo precio los medicamentos que necesites contamos con drogueria animal "
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btngato2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/marco"
                android:layout_margin="5dp"

                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgServicios"
                    android:layout_width="326dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/esteticaanimal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvServDescription"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#731DEF"
                        android:text="Peluqueria y higiene animal"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvServPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sabemos que tambien es importante que tu perro sea limpio para gozar de una mejor salud, es por eso que contamos con servicio de higiene y peluqueria animal"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btnperroygato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>