<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#DFC8E4"
    tools:context=".MainActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#731DEF"
                android:text="Productos"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/design_default_color_background"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/imagenperro1"
                    android:layout_width="326dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/perros1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvProName"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="#731DEF"
                        android:text="Cama para perros y gatos"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background" />

                    <TextView
                        android:id="@+id/tvProDesciption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Comoda cama ideal para tu perro y gato, hecho con los materiales de mejor calidad en el mercado"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btnperro1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="317dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/perros2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt1"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="#731DEF"
                        android:text="Shampoo PETS "
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/design_default_color_background" />

                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shampoo PETS el cual cuida y embellece la piel de tu peludo"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btnperro2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgSucursales"
                    android:layout_width="246dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/gatos1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSucName"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="#731DEF"
                        android:text="Cama para gatos"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvSucLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cama para gatos ideal para los mas consentidos"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btngato1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/marco"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imggatos2"
                    android:layout_width="323dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/gatos2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtg2"
                        android:layout_width="match_parent"
                        android:layout_height="33dp"
                        android:background="#731DEF"
                        android:text="Gimnasio para gatos"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtg3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gran gimnasio para gatos, ideal para aquellos gatos traviesos y aventureros"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btngato2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/marco"
                android:layout_margin="5dp"

                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgServicios"
                    android:layout_width="326dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/perrosygatos" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvServDescription"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="#731DEF"
                        android:text="Antipulgas Gatos y Perros"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvServPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Eficaz antipulgas para gatos y perros (Ver detalles sobre peso y tiempos de efectividad)"
                        android:textColor="?android:attr/colorPressedHighlight" />

                    <Button
                        android:id="@+id/btnperroygato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Detalle" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>